<div class="container" style="float: left; ">

	<div class="col-md-5">

		<%= form_for :administrator, url: administrators_path do |f| %>

		<% if defined? @administrator %>

		<% if @administrator.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@administrator.errors.count, "error") %> prohibited
				this administrator from being saved:
			</h2>
			<ul>
				<% @administrator.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<% end %>

		<p>
			<%= f.label :name %><br>
			<%= f.text_field :name %>
		</p>

		<p>
			<%= f.label :email_id %><br>
			<%= f.text_field :email, :placeholder => 'john.doe@domain.com' %>
		</p>

		<p>
			<%= f.label :designation %><br>

			<select name="administrator[designation]">

				<option value="5">Student Member</option>
				<option value="5">Coordinator</option>

			</select>

		</p>

		<p>
			<input type="submit" class="btn btn-success" value="Create Administrator">
		</p>

		<% end %>

		<a href="<%= administrators_path %>">
			<button class="btn btn-primary">
				Back to Administrators Home
			</button>
		</a>

	</div>

	<div class="col-md-7">
	</div>

</div>