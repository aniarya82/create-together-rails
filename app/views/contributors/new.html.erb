<div class="container" style="float: left; ">

	<div class="col-md-5">

		<%= form_for :contributor, url: contributors_path do |f| %>

		<% if defined? @contributor %>

		<% if @contributor.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@contributor.errors.count, "error") %> prohibited
				this contributor from being saved:
			</h2>
			<ul>
				<% @contributor.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<% end %>

		<p>
			<%= f.label :name %><br>
